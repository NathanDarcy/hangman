<% include partials/header %>
<h1> HANGMAN </h1>

<!-- Image of Current Hangman -->
<img src="/images/hangmanS<%= stage %>.png"/>

<!-- Display Word Progress -->
<h5> 
        <% for (var i = 0; i < word.length; i++){ %>
            <% if (guesses.includes(word[i]) ){ %>
                <%= word[i] %>
            <% } else { %>
                <%= '_' %>
            <% } %>

        <% } %>
</h5>


<form method="POST">

    <input type="text" name="guess" />
    <input type="submit" value="Guess" onclick="validate()"/> 

</form>

<% include partials/footer %>